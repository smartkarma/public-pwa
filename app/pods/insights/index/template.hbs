<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      {{#each model as |insight|}}
        <div>
          {{#link-to "insights.insight" insight}}
            <h2 class="post-title">
              {{insight.tagline}}
            </h2>
          {{/link-to}}
          <p class="post-meta">Posted by
          {{#link-to "profile" insight.account.slug}}
            {{insight.account.name}}
          {{/link-to}}
          on {{moment-format insight.publishedAt "lll"}}</p>
        </div>
        <br>
      {{/each}}
    </div>
  </div>
</div>
